<% content_for :title do %>
    <%= t('.categories') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-folder"></i> <%= t('.categories') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_diseases.new_backend_category_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_diseases.list_backend_categories_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_diseases_categories.name'
        },
        {
            text: t('.parent_category'),
            name: 'parents_erp_diseases_categories.name',
            select: {
                name: 'parents_erp_diseases_categories.id',
                data_url: erp_diseases.dataselect_backend_categories_path
            }
        }
    ],
    filters: [
        {
            text: t('published'), name: 'show_published', value: true, checked: true
        },
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_diseases_categories.created_at', sort_direction: 'desc' }
) %>    