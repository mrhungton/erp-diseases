<% content_for :title do %>
    <%= t('edit') %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_diseases.backend_diseases_path %>">
    <i class="fa fa-archive"></i> <%= t('.diseases') %>
    </a> / <%= t('edit') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_diseases.new_backend_disease_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @disease.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', disease: @disease %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>